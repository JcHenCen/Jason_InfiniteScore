<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <ImageView
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        >

        <TextView
            android:layout_width="131dp"
            android:layout_height="21dp"
            android:text="升C小调弦乐四重曲"
            android:textColor="#ff222222"
            android:textSize="15sp"
            />

        <TextView
            android:layout_width="184dp"
            android:layout_height="17dp"
            android:text="Piano Concerto No. 21 in C majo"
            android:textColor="#ff666666"
            android:textSize="12sp"
            android:layout_marginTop="8dp"
            />

        <TextView
            android:layout_width="108dp"
            android:layout_height="17dp"
            android:text="路德维希·凡·贝多芬"
            android:textColor="#ff666666"
            android:textSize="12sp"
            android:layout_marginTop="8dp"
            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginRight="20dp"

            >

            <!--列表图标-->
            <LinearLayout
                android:id="@+id/ll_recommend_list_img"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                >

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@mipmap/recommend_list_piano"
                    />

            </LinearLayout>

            <!--列表文字-->
            <LinearLayout
                android:id="@+id/ll_recommend_list_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ll_recommend_list_img"
                android:layout_marginLeft="3dp"
                >

                <TextView
                    android:layout_width="25dp"
                    android:layout_height="22dp"
                    android:text="钢琴"
                    android:textColor="#ff666666"
                    android:textSize="12sp"
                    android:gravity="center"
                    />


            </LinearLayout>


            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/recommend_list_more" />

        </RelativeLayout>





    </LinearLayout>




</LinearLayout>